style.
    .algus-menu__list {
        margin: 0;
        display: flex;
        align-items: center;
        padding: 0;
    }
    .algus-menu__item {
        margin: 0;
    }
    .algus-menu__item {
        transition: all 0.2s ease-in-out;
    }
    .algus-menu__item:before {
        display: none;
    }
    .algus-menu__item:hover {
        background-color: #fff1e0;
    }
    .algus-menu__item:hover .algus-menu__link {
        text-decoration: none;
        color: #d60e12;
    }
    .algus-menu__item:hover .algus-menu-sub {
        opacity: 1;
        visibility: visible;
    }
    .algus-menu__item_expanded .algus-menu__link span {
        position: relative;
        padding-right: 13px;
    }
    .algus-menu__item_expanded .algus-menu__link span::after {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        border-width: 4px 4px 0 4px;
        border-style: solid;
        border-color: #333 transparent transparent transparent;
        bottom: 0;
        margin: auto;
        height: 0;
    }
    .algus-menu__link {
        padding: 0 15px;
        color: #333;
        line-height: 1;
        height: 40px;
        display: flex;
        align-items: center;
        border: none;
    }
    .algus-menu-sub {
        opacity: 0;
        visibility: hidden;
        position: absolute;
        top: 100%;
        left: 0;
        transition: all 0.2s ease-in-out;
        background-color: #fff1e0;
        width: 230px;
        padding: 0 0 5px;
    }
    .algus-menu-sub__list {
        margin: 0;
        padding: 0;
    }
    .algus-menu-sub__item {
        margin: 0;
    }
    .algus-menu-sub__item:before {
        display: none;
    }
    .algus-menu-sub__item:hover .algus-menu-sub__link {
        color: #d60e12;
    }
    .algus-menu-sub__link {
        display: block;
        padding: 5px 15px;
        color: #333;
        border: none;
    }
