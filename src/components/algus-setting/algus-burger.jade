+b.algus-burger
    +e.menu.LABEL(for='algus-burger-checkbox')
        span
    +e.checkbox.INPUT(type='checkbox')#algus-burger-checkbox

style.
    .algus-burger {}
    /*.algus-burger.active .algus-burger__menu::before {*/
    /*    content: "\f00d";*/
    /*    font-weight: 100;*/
    /*}*/
    .algus-burger.active .algus-burger__menu span {
        background-color: transparent;
    }
    .algus-burger.active .algus-burger__menu span:before {
        transform: rotate(45deg);
        top: 0;
    }
    .algus-burger.active .algus-burger__menu span:after {
        transform: rotate(-45deg);
        top: 0;
    }
    .algus-burger__checkbox {
        display: none;
    }
    .algus-burger__menu {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50px;
        width: 50px;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        padding: 0;
    }
    .algus-burger__menu:hover {
        background-color: #fff1e0;
    }
    /*.algus-burger__menu::before {*/
    /*    content: "\f0c9";*/
    /*    font-family: "Font Awesome 5 Pro";*/
    /*    font-size: 30px;*/
    /*    font-weight: 400;*/
    /*    color: #333;*/
    /*    line-height: 1;*/
    /*}*/
    .algus-burger__menu span {
        background-color: #000;
        width: 25px;
        height: 3px;
        position: relative;
        transition: all 0.25s ease-in-out;
    }
    .algus-burger__menu span:before,
    .algus-burger__menu span:after {
        content: '';
        position: absolute;
        left: 0;
        right: 0;
        background-color: #000;
        height: 3px;
        transition: all 0.25s ease-in-out;
    }
    .algus-burger__menu span:before {
        top: -8px;
    }
    .algus-burger__menu span:after {
        bottom: -8px;
    }


script.
    document.addEventListener('DOMContentLoaded', function () { // Аналог $(document).ready(function(){
        if ( localStorage.getItem("algus-setting-burger") == "true" ) {
            document.querySelector(".algus-burger__checkbox").checked = true;
        } else {
            document.querySelector(".algus-burger__checkbox").checked = false;

        }
        if ( document.querySelector(".algus-burger__checkbox").checked ) {
            document.querySelector(".algus-panel").classList.add('open');
            document.querySelector(".algus-burger").classList.add('active');
        } else {
            document.querySelector(".algus-panel").classList.remove('open');
            document.querySelector(".algus-burger").classList.remove('active');
        }
        document.querySelector(".algus-burger__checkbox").addEventListener('click', function () {
            localStorage.setItem("algus-setting-burger", document.querySelector(".algus-burger__checkbox").checked );
            if (document.querySelector(".algus-burger__checkbox").checked) {
                document.querySelector(".algus-panel").classList.add('open');
                document.querySelector(".algus-burger").classList.add('active');
            } else {
                document.querySelector(".algus-panel").classList.remove('open');
                document.querySelector(".algus-burger").classList.remove('active');
            }
        });
    });